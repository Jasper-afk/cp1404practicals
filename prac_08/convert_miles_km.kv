BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            multiline: False
            font_size: 48
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'Up'
                font_size: 24
                on_press: app.handle_number_increment(1)
            Button:
                text: 'Down'
                font_size: 24
                on_press: app.handle_number_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        font_size: 24
#        on_press: app.handle_convert(input_number.text)
    Label:
        text: app.output_text
        font_size: 48
        color: (1, 1, 0, 1)
